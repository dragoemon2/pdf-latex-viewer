{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pdf-latex-viewer",
  "version": "0.1.0",
  "identifier": "com.dragoemon.pdf-latex-viewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "pdf-latex-viewer",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["pdfium/libpdfium.so"],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0", 
          "libgtk-3-0", 
          "libappindicator3-1"
        ],
        "files": {
          "/usr/share/applications/pdf-latex-viewer.desktop": "pdf-latex-viewer.desktop"
        }
      }
    },
    "fileAssociations": [
      {
        "ext": ["pdf"],
        "name": "PDF Document",
        "mimeType": "application/pdf",
        "role": "Editor"
      }
    ]
  }
}
